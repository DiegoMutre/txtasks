{
    "name": "txtasks",
    "private": true,
    "author": {
        "name": "DiegoMutre",
        "email": "tysonmutre10@gmail.com"
    },
    "license": "MIT",
    "version": "1.0.0",
    "keywords": [
        "react",
        "styled-components",
        "emotion",
        "react-query",
        "typescript",
        "nodejs"
    ],
    "scripts": {
        "start:client": "lerna exec --scope @txtasks/client -- yarn dev",
        "add:w": "yarn add -W",
        "add:client": "lerna exec --scope @txtasks/client -- yarn add",
        "add:ui": "lerna exec --scope @txtasks/ui -- yarn add",
        "build:ui": "lerna exec --scope @txtasks/ui -- yarn build",
        "format": "prettier --write .",
        "lint": "eslint \"./packages/**/*.{ts,tsx}\" --fix",
        "prepare": "husky install",
        "bootstrap": "lerna bootstrap --use-workspaces"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "eslint": "^8.2.0",
        "eslint-plugin-import": "^2.25.3",
        "husky": "^7.0.4",
        "lerna": "^4.0.0",
        "lint-staged": "^11.2.6",
        "prettier": "2.4.1"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,json}": [
            "yarn format",
            "yarn lint"
        ]
    },
    "dependencies": {
        "@manypkg/cli": "^0.19.1"
    }
}
